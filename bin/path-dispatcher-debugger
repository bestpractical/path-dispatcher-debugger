#!/usr/bin/env perl
use strict;
use warnings;
use Path::Dispatcher::Debugger;
use HTTP::Engine;

my $port = 9187;
my $debugger = Path::Dispatcher::Debugger->new;

HTTP::Engine->new(
    interface => {
        module => 'ServerSimple',
        args   => {
            host => 'localhost',
            port => $port,
        },
        request_handler => sub { $debugger->handle_request(@_) },
    },
)->run;

